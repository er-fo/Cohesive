{
  "root": true,
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint"],
  "rules": {
    "semi": ["error", "always"],
    "quotes": ["error", "single"],
    "@typescript-eslint/no-unused-vars": ["warn"]
  },
  "ignorePatterns": [
    "node_modules/",
    "dist/",
    "build/",
    "frontend/node_modules/",
    "backend/node_modules/",
    "workers/node_modules/"
  ]
} 